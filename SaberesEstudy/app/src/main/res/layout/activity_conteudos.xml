<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloConteudos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conteúdos"
        android:textColor="#1DB954"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botão de perfil simples (sem ícone do sistema) -->
    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textAllCaps="false"
        android:backgroundTint="#333333"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/txtTituloConteudos"
        app:layout_constraintBottom_toBottomOf="@id/txtTituloConteudos"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de busca -->
    <EditText
        android:id="@+id/edtBusca"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/txtTituloConteudos"
         />

    <!-- Filtro Matéria -->
    <EditText
        android:id="@+id/edtMateria"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#1DB954"
        android:hint="Matéria"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        app:layout_constraintTop_toBottomOf="@id/edtBusca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edtSerie" />

    <!-- Filtro Série -->
    <EditText
        android:id="@+id/edtSerie"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#1DB954"
        android:hint="Série"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#777777"
        app:layout_constraintTop_toBottomOf="@id/edtBusca"
        app:layout_constraintStart_toEndOf="@id/edtMateria"
        app:layout_constraintEnd_toStartOf="@id/btnFiltrar" />

    <!-- Botão Filtrar -->
    <Button
        android:id="@+id/btnFiltrar"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#1DB954"
        android:text="Filtrar"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/edtBusca"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lista de conteúdos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvConteudos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/edtMateria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:layout_margin="16dp"
        app:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
