<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ScrollView
        android:id="@+id/scrollTopo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutChat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título do conteúdo"
                android:textColor="#1DB954"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matéria • Série • Professor"
                android:textColor="#B3B3B3"
                android:textSize="13sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/txtTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto do conteúdo..."
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/txtLinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Links / imagens / vídeos"
                android:textColor="#1DB954"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnFavorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#1DB954"
                android:text="Favoritar"
                android:textAllCaps="false"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>

    <!-- Área de chat embaixo -->
    <LinearLayout
        android:id="@+id/layoutChat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#000000"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/scrollTopo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtChatTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMensagens"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:overScrollMode="never" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <EditText
                android:id="@+id/edtMensagem"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                 />

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                 />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
